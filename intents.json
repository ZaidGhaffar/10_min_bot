{
    "intents": [
      {
        "tag": "greeting",
        "patterns": ["Hello", "Hi", "Hey", "Good morning", "Good afternoon"],
        "responses": ["Hello, this is [Agent Name] from [Your Company]. Am I speaking with {customer_name}?"],
        "context_set": "",
        "call_handle": "continue"
      },
      {
        "tag": "confirm_identity",
        "patterns": ["Yes", "That's me", "Speaking", "Yes, this is {customer_name}"],
        "responses": ["Great! I'm reaching out to share some exciting investment opportunities we have right now. Do you have a few minutes to hear about some options?"],
        "context_set": "check_availability",
        "context_filter": "confirm_identity",
        "call_handle": "continue"
      },
      {
        "tag": "deny_identity",
        "patterns": ["No", "Wrong number", "Not available", "They're not here"],
        "responses": ["I understand. I'll try to reach {customer_name} at a later time. Thank you for your help!"],
        "context_filter": "confirm_identity",
        "call_handle": "end"
      },
      {
        "tag": "available",
        "patterns": ["Yes", "Sure", "I have time", "Go ahead"],
        "responses": ["Fantastic! Are you already investing, or are you exploring options?"],
        "context_set": "assess_experience",
        "context_filter": "check_availability",
        "call_handle": "continue"
      },
      {
        "tag": "not_available",
        "patterns": ["No", "I'm busy", "Not now", "Another time"],
        "responses": ["I understand. Is there a better time for me to call back?"],
        "context_set": "schedule_callback",
        "context_filter": "check_availability",
        "call_handle": "end"
      },
      {
        "tag": "already_investing",
        "patterns": ["I'm already investing", "I have investments", "I invest"],
        "responses": ["Fantastic! Would you be open to discussing options that complement your current portfolio?"],
        "context_set": "gauge_interest",
        "context_filter": "assess_experience",
        "call_handle": "continue"
      },
      {
        "tag": "exploring_options",
        "patterns": ["I'm exploring", "New to investing", "Looking into it", "Considering investing"],
        "responses": ["No problem! We specialize in guiding first-time investors. Let me introduce you to some suitable stock options for beginners."],
        "context_set": "present_beginner_options",
        "context_filter": "assess_experience",
        "call_handle": "continue"
      },
      {
        "tag": "interested",
        "patterns": ["Yes", "I'm interested", "Tell me more", "Sounds good"],
        "responses": ["Great! To recommend the best investment options for you, may I ask your age?"],
        "context_set": "ask_age",
        "context_filter": "gauge_interest",
        "call_handle": "continue"
      },
      {
        "tag": "not_interested",
        "patterns": ["No", "Not interested", "I'll pass", "Maybe later"],
        "responses": ["Alright, if there's any way we can assist in the future, just let us know. Thank you for your time!"],
        "context_filter": "gauge_interest",
        "call_handle": "end"
      },
      {
        "tag": "provide_age",
        "patterns": ["I'm {age}", "{age} years old", "My age is {age}"],
        "responses": ["Thank you! Based on your age and experience, I'll tailor some stocks that suit your profile. Let me share details about our recommended stocks..."],
        "context_set": "present_tailored_options",
        "context_filter": "ask_age",
        "call_handle": "continue"
      },
      {
        "tag": "decline_age",
        "patterns": ["I'd rather not say", "I don't want to provide that", "Skip this"],
        "responses": ["No problem! We can proceed without that information. Let me share some general investment options that might interest you..."],
        "context_set": "present_general_options",
        "context_filter": "ask_age",
        "call_handle": "continue"
      },
      {
        "tag": "schedule_callback",
        "patterns": ["Yes", "That would be better", "Call me later", "Another time works"],
        "responses": ["I'm setting a reminder to call back at your preferred time. When would be a good time for you?"],
        "context_set": "get_callback_time",
        "context_filter": "schedule_callback",
        "call_handle": "continue"
      },
      {
        "tag": "no_callback",
        "patterns": ["No", "Don't call back", "I'll reach out if interested"],
        "responses": ["No worries! Feel free to reach out whenever it's convenient for you. Have a great day!"],
        "context_filter": "schedule_callback",
        "call_handle": "end"
      },
      {
        "tag": "get_callback_time",
        "patterns": ["{day} at {time}", "Around {time}", "Next {day}"],
        "responses": ["Perfect! I've scheduled a callback for {day} at {time}. Thank you for your time, and we look forward to speaking with you then!"],
        "context_filter": "get_callback_time",
        "call_handle": "end"
      },
      {
        "tag": "goodbye",
        "patterns": ["Goodbye", "Bye", "Thanks", "That's all"],
        "responses": ["Thank you for your time. If you have any questions in the future, please don't hesitate to reach out. Have a great day!"],
        "context_filter": "any",
        "call_handle": "end"
      }
    ]
  }
  
